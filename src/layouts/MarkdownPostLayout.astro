---
import HtmlLayout from './HtmlLayout.astro';
import Prose from '../components/Prose.astro';
import Footer from '../components/footer/Footer.astro';
import Header from '../components/header/Header.astro';
import { slugify } from '../util/util';
import Navigation from '../components/navigation/Navigation.astro';
const { frontmatter } = Astro.props;

const sideBarWidth = 300;

const projectId = frontmatter.url.split('/')[1];

const getAllProjects = await Astro.glob('../pages/*/*.md');

const project = getAllProjects.find((project) => {
  const slug = slugify(project.frontmatter.title);
  return slug === projectId;
});

const getAllArticlePaths = import.meta.glob('../pages/*/*/*.md');

let chapterIds: string[] = [];

for (const path in getAllArticlePaths) {
  if (path.includes(projectId)) {
    const chapter = path.split('/')[3];
    if (!chapterIds.includes(chapter)) {
      chapterIds.push(chapter);
    }
  }
}
---

<HtmlLayout pageTitle={frontmatter.title}>
  <header class="header-wrap bg-primary border-b border-primary shadow-sm">
    <Header chapterIds={chapterIds} />
  </header>
  <div class="mt-16 flex-1 max-w-[90rem] mx-auto px-8">
    <div
      class="hidden md:block fixed inset-0 top-16 left-[max(0px,calc(50%-45rem))] right-auto py-10 pl-8 pr-6 overflow-y-auto border-r border-primary"
      style={{ width: sideBarWidth + 'px' }}
    >
      <Navigation chapterIds={chapterIds} />
    </div>
    <div class="pl-0 md:pl-72" style={{ minHeight: 'calc(100vh - 64px)' }}>
      <div class="flex flex-col" style={{ minHeight: 'calc(100vh - 64px)' }}>
        <main class="py-10 flex-1">
          <div class="mt-2 mb-10">
            <h1 class="text-3xl font-bold">{frontmatter.title}</h1>
          </div>
          <Prose>
            <slot />
          </Prose>
        </main>
        <Footer />
      </div>
    </div>
  </div>
</HtmlLayout>
