    <div class="flex flex-col sm:flex-row justify-between items-center flex-wrap gap-x-16 gap-y-8 py-8">
      <div class="flex flex-col sm:flex-row items-center flex-wrap gap-x-8 gap-y-4">
        <Social platform="discord" label="Join us on Discord" link="https://discord.gg/esp4Ew4BdN" />
        <Social platform="maildotru" label="jon@jonvandam.com" link="mailto:jon@jonvandam.com" />
        <Social
          platform="unrealengine"
          label="Unreal Marketplace"
          link="https://www.unrealengine.com/marketplace/en-US/profile/Jon+Van+Dam?count=20&sortBy=effectiveDate&sortDir=DESC&start=0"
        />
      </div>
      <div class="">
